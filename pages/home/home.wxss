page {
  background-color: #eee;
  color: #666;
}

.box {
  max-height: 100vh;
}

/* banner图 */
.header {
  /* position: relative; */
  width: 100vw;
  height: 56.25vw;
}

.header .swiper {
  width: 100vw;
  height: 56.25vw;
}

.header .swiper .slide-image {
  width: 100vw;
  height: 56.25vw;
}

/* 标题 */
.titleText {
  color: #333;
  border-left: 5rpx solid #CC0033;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-weight: 700;
  background-color: #fff;
}

/* 活动列表 */
.activity-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #fff;
}

/* 原来的 */
.activity-list {
  position: relative;
  width: 48vw;
  padding: 14rpx 0.5vw;
  margin: 0 0.5vw 10rpx 0.5vw;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;

  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.activity-list image {
  width: 46vw;
  height: 230rpx;
  margin-left: 1vw;
}

.activity-list .title {
  display: block;
  width: 46vw;
  height: 80rpx;
  line-height: 40rpx;
  color: #666;
  margin: 10rpx 1.4vw;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 单张小图 */
.activity-list2 {
  position: relative;
  width: 95vw;
  padding: 25rpx 0;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: flex-start;
}

.activity-list2 image {
  width: 300rpx;
  height: 180rpx;
  margin-left: 10rpx;
}

.activity-list2 .titleBox {
  flex: 1;
  height: 180rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}

.activity-list2 .titleBox .title {
  width: 100%;
  padding: 0 15rpx;
  line-height: 40rpx;
  color: #333;
  font-size: 35rpx;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 到底提示 */
.foot {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}

/* 四分导航 */
.classification {
  height: 170rpx;
  overflow-x: auto;
  background-color: #fff;
  border-bottom: 10rpx solid #f8f8f8;

  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.classification view {
  position: relative;
  min-width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.classification image {
  width: 65rpx;
  height: 65rpx;
}

.classification text {
  font-weight: bold;
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0 0 0;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

.btnBox {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;

  position: fixed;
  right: 8rpx;
  bottom: 20rpx;
  z-index: 10000;
}

.btnBox button {
  margin: 10rpx 0 0 0;
  padding: 0;
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(0, 0, 0, .8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #fff !important;
}

.btnBox button image {
  width: 70rpx;
  height: 70rpx;
}