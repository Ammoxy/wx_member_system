/* pages/home/home.wxss */
page {
  /* background-color: #eee; */
  color:#666;
}

.box {
  max-height: 100vh;
}

/* banner图 */
.header {
  position: relative;
  width: 100vw;
  height: 56.25vw;
}

.header .swiper {
  width: 100vw;
  height: 56.25vw;
}

.header .swiper .slide-image {
  width: 100vw;
  height: 56.25vw;
}

/* 标题 */
.titleText {
  color: #333;
  border-top: 10rpx solid #f8f8f8;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}


/* 活动列表 */
.activity-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #fff;
}

/* 原来的 */
.activity-list {
  position: relative;
  /* formID按钮父元素 */
  width: 48vw;
  padding: 14rpx 0.5vw;
  margin: 0 0.5vw 10rpx 0.5vw;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;

  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.activity-list image {
  width: 46vw;
  height: 230rpx;
  margin-left: 1vw;
}

.activity-list .title {
  display: block;
  width: 46vw;
  height: 80rpx;
  line-height: 40rpx;
  color: #666;
  margin: 10rpx 1.4vw;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}


/* 单张大图 */
.activity-list1 {
  position: relative;
  /* formID按钮父元素 */
  width: 95vw;
  padding: 25rpx 0;
  /* margin:0 0.5vw 10rpx 0.5vw; */
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;

  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.activity-list1 image {
  width: 100%;
  height: 280rpx;
  /* margin-left: 1vw; */
}

.activity-list1 .titleBox {
  max-height: 100rpx;
}

.activity-list1 .titleBox .title {
  width: 100%;
  padding: 15rpx 0;
  line-height: 40rpx;
  color: #333;
  font-size: 35rpx;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}

.activity-list1 .read-num {
  color: #999;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 2vw;
}

.activity-list1 .read-num .icon {
  width: 35rpx;
  height: 35rpx;
  margin: 0 10rpx 0 0 !important;
}

