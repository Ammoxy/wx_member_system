page {
  background-color: #f0f0f0;
}

.item {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
  background-color: #fff;
}

.goods {
  display: flex;
}

.item image {
  width: 200rpx;
  height: 200rpx;
}

.item .info {
  margin-left: 20rpx;
}

.item .info .name {
  width: 460rpx;
  font-size: 36rpx;
  font-weight: 700;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.price-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.price-box .text {
  color: #999;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.price-box .price {
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
}

.item .handle {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.item .handle .button {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #fff;
}


/* 医师列表 */
.doctorBox {
  width: 100vw;
  padding: 20rpx 0;
  display: flex;
  font-size: 30rpx;
}

.doctorBox .doctorList {
  position: relative;
  width: 28vw;
  min-width: 28vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.doctorBox .doctorList .portrait {
  width: 25vw;
  height: 25vw;
}

.doctorBox .doctorList view {
  width: 25vw;
  height: 40rpx;
  display: flex;
  justify-content: center;
}

.doctorBox .doctorList text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

.doctorBox .doctorList .name {
  color: #333;
  /* font-weight: bold; */
}

.doctorBox .doctorList .post {
  color: #333;
  font-size: 26rpx;
}

.doctorBox .doctorList .good {
  font-size: 26rpx;
}

.doctorBox .doctorList .lable {
  width: 70rpx;
  min-width: 70rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #ccc;
  color: #333;
  margin-right: 10rpx;
}

.order-info {
  background-color: #fff;
  margin: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;

}

.order-info .title {
  padding: 20rpx;
  border-bottom: rgb(0, 0, 0, .2) 1rpx solid;
}

.order-info .info {
  padding: 20rpx;
  border-bottom: rgb(0, 0, 0, .2) 1rpx solid;

  display: flex;
  align-items: center;
}

.order-info .info .left {
  width: 200rpx;
}

.order-info .info textarea {
  width: 500rpx;

}

