				</view>
				<view class="goods">
					<view>
						<image src="/icon/add.png"></image>
					</view>
					<view class="info">
						<view class="name">商品标题商品标题商品标题商品标题商品标题商品标题商品标题商品标题商品标题</view>
					</view>
				</view>
				<view class="handle">
					<view class="button" style="background-color: #cc0033;">去付款</view>

					<view class="button" style="background-color: #cc0033;">取消订单</view>
					<view></view>

				</view>
			</view>
		</block>
		<!-- 待发货 -->
		<block wx:if="{{current == 3}}">
			<view class="item">
				<view class="state">
					<text>交易成功 </text>
					<text>交易关闭 </text>
