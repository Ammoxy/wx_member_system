page {
    background-color: #f0f0f0;
}

.search {
    min-width: 100vw;
    position: fixed;
    top: 0;
    padding: 10rpx;
    z-index: 99;
    background-color: #fff;
}

.search input {
    width: 630rpx;
    position: relative;
    height: 50rpx;
    line-height: 50rpx;
    padding: 10rpx 50rpx;
    border-radius: 5rpx;
    background-color: rgb(0, 0, 0, 0.1);
    font-size: 30rpx;
}

.search image {
    width: 30rpx;
    height: 30rpx;
}

.search .icon-search {
    position: absolute;
    top: 30rpx;
    left: 20rpx;
}

.search .icon-close {
    position: absolute;
    top: 30rpx;
    right: 40rpx;
}

/* 排序 */
.rank {
    display: flex;
    justify-content: space-around;
    margin-top: 8vh;
    padding: 10rpx 0;
    background-color: #fff;
}

.list {
    height: 88vh;
}

.item {
    display: flex;
    flex-direction: column;
    margin: 20rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 5rpx 5rpx 5rpx #ccc;
    background-color: #fff;
}

.item .state {
    align-self: flex-end;
    padding: 10rpx 0;
}

.goods {
    display: flex;
}

.item image {
    width: 200rpx;
    height: 200rpx;
}

.item .info {
    margin-left: 20rpx;
}

.item .info .name {
    width: 460rpx;
    font-size: 36rpx;
    font-weight: 700;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.item .handle {
    display: flex;
    justify-content: flex-end;
}

.item .handle .button {
    margin-left: 10rpx;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    font-size: 30rpx;
    color: #fff;
}

.choose {
    border-bottom: 4rpx solid #CC0033;
    color: #CC0033;
}