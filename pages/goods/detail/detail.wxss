@import "../../../wxParse/wxParse.wxss";

page {
  background-color: #f0f0f0;
  height: 100%;
}


.box swiper {
  width: 100%;
  height: 748rpx;
}

.box swiper .image {
  width: 100%;
  height: 748rpx;
}

.box .goods {
  display: flex;
  flex-direction: column;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.box .goods .name {
  /* font-size: 36rpx; */
  font-weight: 700;
}

.box .goods .profile {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.box .goods .share {
  text-align: right;
}

.box .goods .share image {
  width: 40rpx;
  height: 50rpx;
}

.box .details .content {
  margin: 10rpx;
  /* padding: 10rpx; */
  border-radius: 10rpx;
  background-color: #fff;
}



.btn-box {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background-color: #fff;
  display: flex;
}

.btn-box .add-btn {
  background-color: #CC0033;
  color: #fff;
  width: 30vh;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx;
}
.btn-box .btn-bg {
  background-color: #CC0033;
  color: #fff;
  width: 100vh;
  height: 60rpx;
  margin: 20rpx;
  line-height: 60rpx;

}


.btn-box .buy {
  display: flex;
  align-items: center;
  width: 30vh;
  justify-content: center;
}

.btn-box .buy text,
.btn-box .buy input {
    height: 50rpx;
    line-height: 50rpx;
    padding: 5rpx 20rpx;
    margin-left: 5rpx;
    background-color: #ccc;
}

.btn-box .buy input {
    width: 30rpx;
    text-align: center;
}

