@import "../../../wxParse/wxParse.wxss";

page {
  background-color: #f0f0f0;
  height: 100%;
}


.box swiper {
  width: 100%;
  height: 748rpx;
}

.box swiper .image {
  width: 100%;
  height: 748rpx;
}

.box .goods {
  display: flex;
  flex-direction: column;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.box .goods .name {
  /* font-size: 36rpx; */
  font-weight: 700;
}

.box .goods .profile {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.box .goods .share {
  text-align: right;
}

.box .goods .share image {
  width: 40rpx;
  height: 50rpx;
}

.box .details .content {
  margin: 10rpx;
  /* padding: 10rpx; */
  border-radius: 10rpx;
  background-color: #fff;
}



.btn-box {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background-color: #fff;
  display: flex;
}

.btn-box .add-btn {
  background-color: #CC0033;
  color: #fff;
  width: 30vh;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx;
}

.btn-box .btn-bg {
  background-color: #CC0033;
  color: #fff;
  width: 100vh;
  height: 60rpx;
  margin: 20rpx;
  line-height: 60rpx;

}


.btn-box .buy {
  display: flex;
  align-items: center;
  width: 30vh;
  justify-content: center;
}

.btn-box .buy text,
.btn-box .buy input {
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 20rpx;
  margin-left: 5rpx;
  background-color: #ccc;
}

.btn-box .buy input {
  width: 30rpx;
  text-align: center;
}


/* 底部操作导航 */
.nav {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 105rpx;
  border-top: 1rpx solid #ddd;
  color: #8a8a8a;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
}

.nav .right {
  border-left: 1rpx solid #ddd;
}

.nav button {
  width: 160rpx;
  height: 105rpx;
  font-size: 3.2vw;
  border-radius: 0;
  /* border-right:1rpx solid #ddd; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  color: #8a8a8a;
}

.nav button::after {
  border: none;
  border-radius: 0;
}

.nav image {
  width: 40rpx !important;
  height: 40rpx;
  object-fit: cover;
}

.nav button text {
  height: 35rpx;
  line-height: 35rpx;
}

.nav .enroll {
  width: 375rpx;
  height: 105rpx;
  line-height: 105rpx;
  font-size: 36rpx;
  text-align: center;
  background-color: #CC0033;
  color: #fff;
}

/*模态框*/
.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
}

.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  height: 480rpx;
  background-color: #fff;
}

/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.bottom-dialog-body .good-info {
  width: 100%;
  /* height: 120rpx; */
  /* background: blanchedalmond; */
  display: flex;
}

.bottom-dialog-body .good-info image {
  width: 180rpx;
  height: 180rpx;
  display: block;
}
.bottom-dialog-body .good-info .price {
  padding: 20rpx;
}

.bottom-dialog-body .buy {
  display: flex;
  /* align-items: center; */
  /* width: 30vh; */
  /* justify-content: center; */
  margin-top: 60rpx;
}

.bottom-dialog-body .buy view {
  width: 70%;
}

.bottom-dialog-body .buy text,
.bottom-dialog-body.buy input {
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 20rpx;
  margin-left: 5rpx;
  background-color: #f0f0f0;
}

.bottom-dialog-body .buy input {
  width: 80rpx;
  text-align: center;
}

.bottom-dialog-body .btn {
  background-color: #CC0033;
  color: #fff;
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  /* width: 80vh; */
  margin: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
}